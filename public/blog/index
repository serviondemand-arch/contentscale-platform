  <script>
    let currentCategory = 'all';
    
    function filterCategory(category) {
      currentCategory = category;
      
      // Update active button
      document.querySelectorAll('.filter-btn').forEach(btn => {
        btn.classList.remove('active');
        if (btn.textContent.toLowerCase().includes(category) || (category === 'all' && btn.textContent === 'All Posts')) {
          btn.classList.add('active');
        }
      });
      
      filterBlogs();
    }
    
    function filterBlogs() {
      const searchTerm = document.getElementById('searchBox').value.toLowerCase();
      const posts = document.querySelectorAll('#posts-container .blog-card');
      let visibleCount = 0;
      
      posts.forEach(post => {
        const categories = post.dataset.category || '';
        const title = post.querySelector('h3').textContent.toLowerCase();
        const description = post.querySelector('p').textContent.toLowerCase();
        
        const matchesCategory = currentCategory === 'all' || categories.includes(currentCategory);
        const matchesSearch = !searchTerm || title.includes(searchTerm) || description.includes(searchTerm);
        
        if (matchesCategory && matchesSearch) {
          post.style.display = 'block';
          visibleCount++;
        } else {
          post.style.display = 'none';
        }
      });
      
      // Show/hide no results message
      const noResults = document.getElementById('no-results');
      const blogGrid = document.getElementById('blog-grid');
      
      if (visibleCount === 0) {
        noResults.classList.remove('hidden');
        blogGrid.classList.add('hidden');
      } else {
        noResults.classList.add('hidden');
        blogGrid.classList.remove('hidden');
      }
    }
    
    // Analytics tracking (optional - add Google Analytics later)
    document.querySelectorAll('.blog-card').forEach(card => {
      card.addEventListener('click', function() {
        const title = this.querySelector('h3').textContent;
        console.log('Blog clicked:', title);
        // gtag('event', 'blog_click', { blog_title: title });
      });
    });
  </script>

